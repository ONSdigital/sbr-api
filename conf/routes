# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Searching Features

GET     /v1/search                controllers.v1.SearchController.searchById(id: Option[String] ?= None, origin: Option[String] ?= None)

#GET     /v1/enterprises/:id       controllers.v1.SearchController.searchByEnterprise(id)
GET     /v1/leus/:id              controllers.v1.SearchController.searchByLeU(id)
#GET     /v1/vats/:id              controllers.v1.SearchController.searchByVat(id)
#GET     /v1/payes/:id             controllers.v1.SearchController.searchByPaye(id)
#GET     /v1/crns/:id              controllers.v1.SearchController.searchByCrn(id)

# Home
GET     /                         controllers.HomeController.status
OPTIONS /*all                     controllers.HomeController.preflight(all: String)

# Route for deployed version information (in JSON).
GET     /version                  controllers.VersionController.version

# build dates
# GET   /latest                   controllers.v1.LastUpdateController.latestListings

# Route for health check information (in JSON).
GET     /health                   controllers.HealthController.health

# api documentation
GET     /swagger.json             controllers.ApiHelpController.getResources
GET     /docs                     controllers.HomeController.swagger


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
